@model List<Sprint>

<table class="table text-center">
    <thead>
        <h3>All Sprints</h3>
        <a href="/TeamLeader/AddNewSprint?id=@ViewBag.ProjectID" class="btn btn-info">Add New Sprint</a>


        <tr>
            <th>
                SprintID
            </th>

            <th>
                Title
            </th>

            <th>
                Description
            </th>

            <th>
                Start Date
            </th>

            <th>
                Due Date
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sprint in (List<Sprint>)Model)
        {
        <tr>
            <td>
                @sprint.SprintID
            </td>
            <td>
                @sprint.SprintTitle
            </td>

            <td>
                @sprint.SprintDescription
            </td>
            <td>
                @sprint.StartDate
            </td>
            <td>
                @sprint.DueDate
            </td>
            <td>
                @sprint.Status
            </td>
            <td>
                <a href="/TeamLeader/EditSprint?id=@sprint.SprintID" class="btn btn-info">Edit</a>
            </td>

            <td>
                <a href="/TeamLeader/ShowAllSTasks?id=@sprint.SprintID" class="btn btn-info">Tasks</a>
            </td>
        </tr>
        }
    </tbody>
</table>
