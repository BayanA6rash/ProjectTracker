@model List<Work>

<table class="table text-center">
    <thead>
        <h3>All Works</h3>
        <a href="/Developer/AddNewWork?id=@ViewBag.STaskID" class="btn btn-info">Add New Work</a>

        <tr>
            <th>
                WorkID
            </th>

            <th>
                Title
            </th>

            <th>
                Description
            </th>
            <th>
                Status
            </th>
            <th>
                DeveloperName
            </th>

            <th>
                File
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var work in (List<Work>)Model)
        {
            <tr>
                <td>
                    @work.WorkID
                </td>
                <td>
                    @work.WorkTitle
                </td>

                <td>
                    @work.WorkDescription
                </td>

                <td>
                    @work.WorkDescription
                </td>

                <td>
                    @work.Developer.FirstName
                </td>

                <td><a href="/Developer/GetFile?id=@work.WorkID" target="_blank">@work.WorkFileName</a></td>

            </tr>
        }
    </tbody>
</table>

